{
  "grid": [
    { "id": "p1", "xs": 5, "class": "main", "table": "schedrule" },
    { "id": "p2", "xs": 4, "class": "main", "table": "schedrule" },
    { "id": "p3", "xs": 3, "class": "main", "table": "schedcurrent" },
    { "id": "p7", "xs": 12, "class": "main", "table": "schedrule", "hide": "!data.p1.what.id || data.p1.what.id != 'multicmd'", "height": "fill" }
  ],
  "spacing": 8,

  "p1": [
    { "prop": "name", "title": "$Name", "type": "input" },
    {
      "prop": "what",
      "title": "$Execute",
      "type": "droplist",
      "data": [
        { "id": "scene", "title": "Сценарий" },
        { "id": "devcmd", "title": "Команда устройства" },
        { "id": "multicmd", "title": "Несколько команд" }
      ]
    },
    {
      "prop": "scene",
      "title": "$Schedu_Scene",
      "type": "droplist",
      "data": "sceneList",
      "hide": "!data.p1.what.id || data.p1.what.id != 'scene'"
    },

    {
      "prop": "devlink",
      "title": "Команда ",
      "type": "smartbutton",
      "command": "dialog",
      "params": { "title": "Команда устройства", "type": "tree", "id": "devcmd", "dialog": "devicelink" }
    }
  ],

  "p2": [
    {
      "prop": "when",
      "title": "$When",
      "type": "droplist",
      "data": [
        { "id": "intime", "title": "В заданное время" },
        { "id": "sunrise", "title": "На рассвете" },
        { "id": "sunset", "title": "На закате" },
        { "id": "cycle", "title": "Циклически" }
      ]
    },

    {
      "prop": "timehhmm",
      "title": "$Schedu_Time",
      "type": "input",
      "hide": "!data.p2.when.id || data.p2.when.id != 'intime'"
    },
    {
      "prop": "shift",
      "title": "$Schedu_Shift",
      "type": "input",
      "hide": "!data.p2.when.id || data.p2.when.id != 'sunset' && data.p2.when.id != 'sunrise'"
    },
    {
      "prop": "period",
      "title": "$Schedu_Period",
      "type": "input",
      "hide": "!data.p2.when.id || data.p2.when.id != 'cycle'"
    },
    { "prop": "days", "title": "$Schedu_DaysOfWeek", "type": "input" },

    { "prop": "dates", "title": "$Schedu_Dates", "type": "input" }
  ],
  "p3": [
    { "prop": "willstart_ts", "title": "$Schedu_WillStart", "type": "text" },
    { "prop": "laststart_ts", "title": "$Schedu_LastStart", "type": "text" }
  ],

  "p7": [
    {
      "title": "",
      "type": "table",
      "prop": "simplesceneTable",
      "popupenable": true,

      "columns": [
        { "prop": "order", "title": "№", "type": "input", "width": 50 },
        { "prop": "did", "title": "Устройство", "type": "droplist", "data": "deviceList", "width": 350 },
        { "prop": "cmd", "title": "Команда", "type": "droplist", "data":"__devcmd", "width": 150 },
        { "prop": "timeout", "title": "Задержка сек", "type": "number", "width": 150 },
        { "prop": "txt", "title": "Комментарий", "type": "input", "width": 350 }
      ]
    }
  ]
}
