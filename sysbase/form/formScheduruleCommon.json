{
  "grid": [
    { "id": "p1", "xs": 5, "class": "main", "table": "schedurule" },
    { "id": "p2", "xs": 4, "class": "main", "table": "schedurule" },
    { "id": "p3", "xs": 3, "class": "main", "table": "schedurule" }
  
  ],
  "spacing": 8,
  

  "p1": [
    { "prop": "name", "title": "$Name", "type": "input" },
    { "prop": "what", "title": "$Execute", "type": "droplist", "data":[{"id":"scene", "title":"Сценарий"}, {"id":"devcmd", "title":"Команда устройства"}] },
    { "prop": "scene", "title": "$Schedu_Scene", "type": "droplist", "data":"sceneList", "hide":"!data.p1.what.id || data.p1.what.id != 'scene'"}
  ],

  "p2": [
    { "prop": "when", "title": "$When", "type": "droplist", 
      "data":[
        {"id":"intime", "title":"В заданное время"},
        {"id":"sunrise", "title":"На рассвете"},
        {"id":"sunset", "title":"На закате"},
        {"id":"cycle", "title":"Циклически"}]
    },

  
    { "prop": "timehhmm", "title": "$Schedu_Time", "type": "input", "hide":"!data.p2.when.id || data.p2.when.id != 'intime'" },
    { "prop": "shift", "title": "$Schedu_Shift", "type": "input", "hide":"!data.p2.when.id || data.p2.when.id != 'sunset' && data.p2.when.id != 'sunrise'" },
    { "prop": "period", "title": "$Schedu_Period", "type": "input", "hide":"!data.p2.when.id || data.p2.when.id != 'cycle'" },
    { "prop": "days", "title": "$Schedu_DaysOfWeek", "type": "input" },
  
    { "prop": "dates", "title": "$Schedu_Dates", "type": "input" }
  ],
 "p3": [
    { "prop": "laststart", "title": "$Schedu_LastStart", "type": "text" },
    { "prop": "willstart", "title": "$Schedu_WillStart", "type": "text" }
   
 ]
 
}
