{
  "grid": [
    { "id": "p1", "xs": 12, "class": "main", "table": "device", "hide": "data.p1.mob" },
    { "id": "p2", "xs": 4, "class": "main", "table": "mobiledevice", "hide": "!data.p1.mob" },

    { "id": "p4", "xs": 4, "class": "main", "table": "mobiledevice", "hide": "!data.p1.mob" },
    {
      "id": "p5",
      "xs": 4,
      "class": "main",
      "table": "mobiledevice",
      "hide": "!data.p1.mob || data.p2.cl.startsWith('SensorA')"
    },

    { "id": "p6", "xs": 4, "class": "main", "table": "mobiledevice", "hide": "!data.p1.mob" },
    {
      "id": "p7",
      "xs": 4,
      "class": "main",
      "table": "mobilesettingfromtypeTable",
      "height": 250,
      "hide": "!data.p1.mob || !data.p6.typesetting "
    },
    {
      "id": "p8",
      "xs": 4,
      "class": "main",
      "table": "mobilesettingfromsceneTable",
      "height": 250,
      "hide": "!data.p1.mob || !data.p6.scenesetting"
    }
  ],
  "spacing": 10,
  "p1": [
    { "prop": "mob", "title": "", "type": "text", "hide": "1==1" },
    { "prop": "no_header", "title": "Это устройство в мобильном не используется", "type": "header", "size": "h6" }
  ],

  "p2": [
    { "prop": "cl", "title": "Класс для мобильного", "type": "text" },
    { "prop": "name", "title": "Название", "type": "input" },
    { "prop": "subs", "title": "Подсистема", "type": "droplist", "data": "taglist" },
    { "prop": "place_room", "title": "Помещение", "type": "droplist", "data": "mobilePlaceList" }
  ],

  "p4": [
    { "prop": "header_image0", "title": "Изображение: нейтральное состояние", "type": "header" },
    { "prop": "image0", "title": "Image", "type": "img" },
    { "prop": "color0", "title": "Color", "type": "color" }
  ],

  "p5": [
    { "prop": "header_image0", "title": "Изображение: активное состояние", "type": "header" },
    { "prop": "image1", "title": "Image", "type": "img" },
    { "prop": "color1", "title": "Color", "type": "color" }
  ],

  "p6": [
    { "prop": "header_setting", "title": "Вкладка Настройка", "type": "header" },
    { "prop": "typesetting", "title": "Показать свойства типа", "type": "cb" },
    { "prop": "scenesetting", "title": "Показать параметры сценариев", "type": "cb" }
  ],

  "p7": [
    {
      "title": "$DeviceProperty",
      "type": "table",
      "prop": "mobiletypesettingTable",

      "columns": [
        { "prop": "title", "title": "Название свойства", "type": "text", "width": 300 }
      ]
    }
  ],

  "p8": [
    {
      "title": "$DeviceProperty",
      "type": "table",
      "prop": "mobilescenesettingTable",

      "columns": [
        { "prop": "title", "title": "Параметр сценария", "type": "text", "width": 300 }
      ]
    }
  ]
}
