{
  "grid": [
    { "id": "p2", "xs": 6, "class": "main", "table": "mobiledevice" },
    { "id": "p3", "xs": 6, "class": "main", "table": "mobiledevice" },

    { "id": "p4", "xs": 3, "class": "main", "table": "mobiledevice" },
    { "id": "p5", "xs": 3, "class": "main", "table": "mobiledevice", "hide": "data.p2.cl.id.startsWith('Sensor')" },
    { "id": "p7", "xs": 3, "class": "main", "table": "mobiledevice" },
    { "id": "p8", "xs": 3, "class": "main", "table": "mobiledevice", "hide": "data.p2.cl.id.startsWith('Sensor')" },
    { "id": "p9", "xs": 12, "class": "main", "table": "mobiledeviceTable", "hide": "1==1" }
  ],
  "spacing": 10,

  "p2": [
    { "prop": "did", "title": "Устройство", "type": "text", "command": "forward"  },
    { "prop": "dn", "title": "ID устройства", "type": "text" },
    { "prop": "name", "title": "$Name", "type": "input" },
    { "prop": "cl", "title": "Класс V4", "type": "droplist", "data": "classV4List" }
  ],

  "p3": [
    { "prop": "subs", "title": "Подсистема", "type": "input" },
    { "prop": "place", "title": "Уровень", "type": "input" },
    { "prop": "room", "title": "Зона", "type": "input" }
  ],

  "p4": [
    { "prop": "header_image0", "title": "Изображение: нейтральное состояние", "type": "header" },
    { "prop": "image0", "title": "Image", "type": "input" },
    { "prop": "color0", "title": "Color", "type": "color" }
  ],

  "p5": [
    { "prop": "header_image0", "title": "Изображение: активное состояние", "type": "header" },
    { "prop": "image1", "title": "Image", "type": "input" },
    { "prop": "color1", "title": "Color", "type": "color" }
  ],

  "p7": [
    { "prop": "header_props", "title": "Свойства", "type": "header" },
    { "prop": "stval", "title": "Состояние", "type": "input", "hide": "data.p2.cl.id == 'SensorA'" },
    { "prop": "aval", "title": "Значение аналоговое", "type": "input", "hide": "data.p2.cl.id == 'SensorD' || data.p2.cl.id == 'ActorD'" },
    { "prop": "defval", "title": "Уставка", "type": "input", "hide": "data.p2.cl.id == 'SensorD' || data.p2.cl.id == 'ActorD'" },
    { "prop": "err", "title": "Ошибка", "type": "input" }
  ],


  "p8": [
    { "prop": "header_commands", "title": "Команды", "type": "header" },
    { "prop": "on", "title": "Включить", "type": "input" },
    { "prop": "off", "title": "Выключить", "type": "input" },
    { "prop": "toggle", "title": "Переключить", "type": "input" },
    { "prop": "set", "title": "Установить значение/уставку", "type": "input", "hide": "data.p2.cl.id == 'SensorD' || data.p2.cl.id == 'ActorD'" }
    
  ],

  "p9": [
    {
      "title": "$DeviceProperty",
      "type": "table",
      "prop": "mobiledeviceTable",
      "genfield": "props",
      "popupenable": true,

      "columns": [
        { "prop": "prop", "title": "Property V4", "type": "text", "width": 200 },
        { "prop": "propV5", "title": "Property V5", "type": "input", "width": 200 }
      ]
    }
  ]
}
