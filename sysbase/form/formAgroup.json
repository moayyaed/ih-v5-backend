{
  "grid": [
    { "id": "p1", "xs": 6, "class": "main", "table": "agroups" },
    { "id": "p2", "xs": 6, "class": "main", "table": "agroups" },
    { "id": "p3", "xs": 6, "class": "main", "table": "agroup_bygroup", "height": "fill" },
    { "id": "p4", "xs": 6, "class": "main", "table": "agroups" }
  ],
  "spacing": 8,

  "p1": [
    { "prop": "_id", "title": "ID группы", "type": "text" },
    { "prop": "name", "title": "$Name", "type": "input" }
  ],

  "p2": [
    { "prop": "all_layouts", "title": "", "type": "text", "hide": "1==1" },
    {
      "prop": "all_layouts_1",
      "title": "✔︎ Разрешен доступ ко всем экранам",
      "type": "header",
      "hide": "!data.p2.all_layouts"
    },
    {
      "prop": "all_layouts_0",
      "title": "▪︎ Доступ к экранам из списка",
      "type": "header",
      "hide": "data.p2.all_layouts"
    },

    { "prop": "all_devctl", "title": "", "type": "text", "hide": "1==1" },
    {
      "prop": "all_devctl_1",
      "title": "✔︎ Разрешено управление всеми устройствами",
      "type": "header",
      "hide": "!data.p2.all_devctl"
    },
    {
      "prop": "all_devctl_0",
      "title": "▪︎ Управление устройствам из списка",
      "type": "header",
      "hide": "data.p2.all_devctl"
    },

    { "prop": "all_pmparts", "title": "", "type": "text", "hide": "1==1" },
    {
      "prop": "all_pmparts_2",
      "title": "✔︎ PM: Полный доступ",
      "type": "header",
      "hide": "data.p2.all_pmparts != 2"
    },
    {
      "prop": "all_pmparts_1",
      "title": "▪︎ PM: Доступ ограничен разделам из списка",
      "type": "header",
      "hide": "data.p2.all_pmparts != 1"
    },
    {
      "prop": "all_pmparts_0",
      "title": "▪︎ PM: Нет доступа",
      "type": "header",
      "hide": "data.p2.all_pmparts"
    }
  ],

  "p3": [
    {
      "title": "Участники",
      "type": "table",
      "prop": "agroup_bygroup",
      "popupenable": true,

      "columns": [{ "prop": "userId", "title": "Пользователи", "type": "droplist", "data": "userList", "width": 300 }]
    }
  ],

  "p4": [{ "prop": "txt", "title": "$Comment", "type": "textarea" }]
}
